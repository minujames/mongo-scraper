<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <div class="panel-title-wrapper"> 
      <a class="title-link" target="_blank" href="{{link}}">{{title}}</a>
      {{#if saved}}
        <button class="btn pull-right add-note" data-id="{{_id}}">ARTICLE NOTES</button>
        <button class="btn pull-right remove-saved" data-id="{{_id}}">DELETE FROM SAVED</button>
      {{else}}
        <button class="btn pull-right save-article" data-id="{{_id}}">SAVE ARTICLE</button>
      {{/if}}
    </div>
  </div>
  <div class="panel-body summary">
    {{summary}}
  </div>
</div>