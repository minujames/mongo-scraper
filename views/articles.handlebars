<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      {{#if saved}}
        <a class="navbar-brand" href="#">Saved Articles</a>
      {{else}}
        <a class="navbar-brand" href="#">Mongo Scraper</a>
      {{/if}}
    </div>

    <div>
      <ul class="nav navbar-nav">
        {{#if saved}}
          <li><a href="/">Home</a></li>
          <li class="active"><a href="/saved">Saved Articles</a></li>
        {{else}}
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/saved">Saved Articles</a></li>
          <li><a class="btn btn-danger scrape-articles">SCRAPE NEW ARTICLES</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <div class="jumbotron">
    <div class="theme-image">
    </div>
    <div class="page-caption">
      <h1>Mongo Scraper</h1>
      <p>New York Times Edition</p>
    </div>
  </div>

  {{#each articles}}
    {{> articles/article-block}}
  {{/each}}
</div>

<div id="articleModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Scrape Articles</h4>
        
      </div>
      <div class="modal-body">
     </div>
     <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
   </div>
 </div>
</div>

<div id="noteModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
     </div>
     <div class="modal-footer">
        <button type="button" class="btn btn-success save-note" data-dismiss="modal">Save Note</button>
      </div>
   </div>
 </div>
</div>